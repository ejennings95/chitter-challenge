<h2>Welcome guest</h2>
<h3>Newsfeed</h3>
<ul>
  <% @peeps.each do |peep| %>
    <li>
    <% @users.each do |user| %>
    <% if user.id == peep.user_id %>
     <%= user.name %> says: <%= peep.peep %> (<%=peep.time%>)
    <% end %>
    <form action="/add_comment" method="get">
      <input type="hidden" name="id" value="<%=peep.id%>">
        <% if user.id == peep.user_id %>
      <input type="submit" value="Comment on <%=user.name%>'s peep">
        <% end %>
    </form>
    <% @comment_list.each do |comment| %>
      <% if peep.id == comment.peep_id %>
      <% if user.id == comment.user_id %>
       <%= user.name %> commented: <%= comment.text %>
      <% end %>
      <% end %>
      <% end %>
      <% end %>
        </li>
  <% end %>
</ul>

<h4>Create a Chitter account to peep</h4>

<form action="/create/account" method="post">
<input type="submit" value="Create an account">
</form>
